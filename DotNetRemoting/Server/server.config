<?xml version="1.0" ?>
<configuration>
  <system.runtime.remoting>
    <application name="Server">
      <service>
        <wellknown mode="Singleton" objectUrl="RemotingObject" type="DotNetRemoting.Shared.RemotingObject, DotNetRemoting"/>
      </service>
      <channels>
        <channel ref="tcp" port="9001" machinename="localhost">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
          <clientProviders>
            <formatter ref="binary" />
          </clientProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>
</configuration>